<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- White underline -->
    <item android:bottom="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set white color for underline -->
        </shape>
    </item>
    <!-- Transparent background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Set transparent color for background -->
        </shape>
    </item>
</layer-list>